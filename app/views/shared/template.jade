doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title=title
    link(rel='icon', href='/img/favicon.jpg')
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/less/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    nav.top-bar
      ul.title-area
        li.name
          h1: a(href='/') Note II
        li.toggle-topbar.menu-icon
          a(href='#') Menu

      section.top-bar-section
        ul.left
        ul.right
          li: a(href='/') Home
          li: divider
          if user
            li: a(href='/')=user.email
            li: divider
            li: form(action='/logout', method='post')
                  button.linker.tiny Log out
          else
            li: divider
            li: a(href='/auth').reg Register/Login
    .row 
      .small-5.small-centered.columns
        block content

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/vendor/moment.js')
    script(src='/js/source/main.js')

